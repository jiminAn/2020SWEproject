<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_groupname"
        android:text="자사모"
        android:textSize="40sp"
        android:textColor="@color/navy"
        android:textStyle="bold"
        android:layout_margin="10dp"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신현승 그룹장"
        android:textSize="20sp"
        android:textColor="@color/gray"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textview_groupname"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_groupexplain"
        android:text="자기계발을 사랑하는 모임입니다"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/navy"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textview_groupname"

        >
    </TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bookicon"
        android:layout_below="@+id/textview_groupexplain"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp">

    </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/button_secondcluster"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_makegroup"
            android:gravity="center"
            android:text="2회차 모임"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:layout_margin="10dp"></Button>
        <Button
            android:id="@+id/button_firstcluster"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_makegroup"
            android:gravity="center"
            android:text="1회차 모임"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:layout_margin="10dp"></Button>

    </LinearLayout>
    <Button
        android:id="@+id/button_joingroup"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_joingroup"
        android:gravity="center"
        android:text="가입신청하기"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_margin="10dp"></Button>

</LinearLayout>
